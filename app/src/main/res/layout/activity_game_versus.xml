<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".GameVersus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:rotation="180">

            <TextView
                android:id="@+id/scoreboard_p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/ic_scoreboard"
                android:backgroundTint="@color/player_one"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="Score: 0"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timer_p1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timer_p1">

                <TextView
                    android:id="@+id/display_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_bold"
                    android:text="20"
                    android:textColor="@color/white_200"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/display_operator_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_bold"
                    android:text="+"
                    android:textColor="@color/white_200"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/display_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_bold"
                    android:text="20"
                    android:textColor="@color/white_200"
                    android:textSize="80sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/timer_p1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/p1_guess1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_one"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/p1_guess2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_one"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg" />

                <Button
                    android:id="@+id/p1_guess3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_one"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg" />

                <Button
                    android:id="@+id/p1_guess4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_one"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/scoreboard_p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/ic_scoreboard"
                android:backgroundTint="@color/player_two"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="13dp"
                android:paddingTop="5dp"
                android:paddingRight="13dp"
                android:paddingBottom="5dp"
                android:text="Score: 0"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timer_p2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/timer_p2">

                <TextView
                    android:id="@+id/display_num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_bold"
                    android:text="20"
                    android:textColor="@color/white_200"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/display_operator_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_bold"
                    android:text="+"
                    android:textColor="@color/white_200"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/display_num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:fontFamily="@font/poppins_bold"
                    android:text="20"
                    android:textColor="@color/white_200"
                    android:textSize="80sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/p2_guess1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_two"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/p2_guess2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_two"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg" />

                <Button
                    android:id="@+id/p2_guess3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_two"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg" />

                <Button
                    android:id="@+id/p2_guess4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="4dp"
                    android:backgroundTint="@color/player_two"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:background="@drawable/ic_solo_guess_bg" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/timer_p2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>